---
import specialist from '../../assets/images/specialist3.webp';
import Stars from '../../components/atoms/Stars.astro';
import james from '../../assets/images/james.jpg';

const cf_city = Astro.request.cf.city;
const cf_region = Astro.request.cf.regionCode;
---

<section class="bg-gradient-to-b from-custom-tan-background to-white">
	<div class="relative px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
		<div class="grid lg:grid-cols-2">
			<div class="md:pb-6">
				<h2 class="mb-3 text-3xl lg:text-4xl font-bold font-heading">Local Pest Removal Services</h2>
				<p class="max-w-3xl mx-auto text-2xl text-custom-blue-two dark:text-slate-400 mb-6">
					Serving {cf_city}, {cf_region} and Surrounding Areas!
				</p>
				<div class="flex">
					<div class="flex flex-col items-center mr-4">
						<div>
							<div class="flex items-center justify-center w-10 h-10 rounded-full border-custom-tan border-2">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
									class="w-6 h-6"
								>
									<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"></path>
								</svg>
							</div>
						</div>
						<div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
					</div>
					<div class="pt-1 pb-3">
						<p class="mb-2 text-xl text-gray-900 dark:text-slate-300">
							Residential, commercial, and industrial buildings
						</p>
					</div>
				</div>
				<div class="flex">
					<div class="flex flex-col items-center mr-4">
						<div>
							<div class="flex items-center justify-center w-10 h-10 rounded-full border-custom-tan border-2">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
									class="w-6 h-6"
								>
									<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"></path>
								</svg>
							</div>
						</div>
						<div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
					</div>
					<div class="pt-1 pb-3">
						<p class="mb-2 text-xl text-gray-900 dark:text-slate-300">Skilled and experienced pest controllers</p>
					</div>
				</div>
				<div class="flex">
					<div class="flex flex-col items-center mr-4">
						<div>
							<div class="flex items-center justify-center w-10 h-10 rounded-full border-custom-tan border-2">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
									class="w-6 h-6"
								>
									<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"></path>
								</svg>
							</div>
						</div>
						<div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
					</div>
					<div class="pt-1 pb-3">
						<p class="mb-2 text-xl text-gray-900 dark:text-slate-300">Eco-friendly and pet-friendly solutions</p>
					</div>
				</div>
				<div class="flex">
					<div class="flex flex-col items-center mr-4">
						<div>
							<div class="flex items-center justify-center w-10 h-10 rounded-full border-custom-tan border-2">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
									class="w-6 h-6"
								>
									<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"></path>
								</svg>
							</div>
						</div>
					</div>
					<div class="pt-1">
						<p class="mb-2 text-xl text-gray-900 dark:text-slate-300">Available 24/7</p>
						<p class="text-gray-700"></p>
					</div>
				</div>
				<div>
					<p class="mt-4 mb-4 text-custom-tan font-bold text-xl">Call now for a free pest inspection & estimate</p>
				</div>
				<div>
					<a
						href="#_"
						class="box-border relative z-30 inline-flex items-center justify-center w-auto px-8 py-3 overflow-hidden font-bold text-white transition-all duration-300 bg-custom-orange rounded-md cursor-pointer group ring-offset-2 ring-1 ring-custom-orange ring-offset-orange-200 hover:ring-offset-custom-orange hover:bg-custom-orange ease focus:outline-none"
					>
						<span
							class="absolute bottom-0 right-0 w-8 h-20 -mb-8 -mr-5 transition-all duration-300 ease-out transform rotate-45 translate-x-1 bg-white opacity-10 group-hover:translate-x-0"
						></span>
						<span
							class="absolute top-0 left-0 w-20 h-8 -mt-1 -ml-12 transition-all duration-300 ease-out transform -rotate-45 -translate-x-1 bg-white opacity-10 group-hover:translate-x-0"
						></span>
						<span class="relative z-20 flex items-center text-2xl">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="w-6 h-6 mr-1"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
								></path>
							</svg>
							(800) 888-5545
						</span>
					</a>
				</div>
			</div>
			<div class="relative hidden lg:grid">
				<!--<Picture
				class="inset-0 object-cover object-top w-full rounded-md shadow-lg md:absolute md:h-full bg-gray-400 dark:bg-slate-700"
				src={import('~/assets/images/astronaut.jpg')}
				widths={[400, 768]}
				sizes="(max-width: 768px) 100vw, 432px"
				alt="Astronaut"
				aspectRatio="432:768"
			/>-->
				<img src={specialist} alt="A pest control specialist." />
			</div>
		</div>
	</div>
</section>
